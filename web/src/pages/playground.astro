---
import Layout from '@/components/layout.astro';
import Header from '@/components/header.astro';
import Footer from '@/components/footer.astro';
import GridBackground from '@/components/grid-background.astro';
import PgHeader from '@/components/pg-header.astro';
import PgTabs from '@/components/pg-tabs.astro';
import P2PPanel from '@/components/p2p-panel.astro';
import DetectPanel from '@/components/detect-panel.astro';
import GroupPanel from '@/components/group-panel.astro';
---

<Layout title="Playground â€” Waterscape" description="Interactive playground powered by the real Waterscape WASM module.">
  <GridBackground />
  <Header currentPath="/playground" />

  <main class="main">
    <div class="container">
      <PgHeader />
      <PgTabs />
      <P2PPanel />
      <DetectPanel />
      <GroupPanel />
    </div>
  </main>

  <Footer />
</Layout>

<script type="module" src="/playground.js"></script>

<style>
  .main {
    padding-top: 60px;
    padding-bottom: var(--spacing-3xl);
  }

  :global(.tab-panel) {
    display: none;
  }

  :global(.tab-panel.active) {
    display: block;
  }

  :global(button) {
    cursor: pointer;
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    transition: all var(--transition-fast);
  }

  :global(button:hover:not(:disabled)) {
    border-color: var(--color-border-light);
  }

  :global(input[type="text"]),
  :global(select),
  :global(textarea) {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    padding: var(--spacing-sm) var(--spacing-md);
    width: 100%;
    outline: none;
    transition: border-color var(--transition-fast);
  }

  :global(input[type="text"]:focus),
  :global(select:focus),
  :global(textarea:focus) {
    border-color: var(--color-border-light);
  }

  :global(select) {
    appearance: none;
    cursor: pointer;
  }
</style>
