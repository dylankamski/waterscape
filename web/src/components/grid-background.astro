<div class="grid-bg" aria-hidden="true">
  <div class="grid-lines"></div>
  <div class="grid-symbols">
    {Array.from({ length: 20 }).map((_, i) => (
      <span class="floating-symbol" style={`--delay: ${i * 0.5}s; --x: ${Math.random() * 100}%; --y: ${Math.random() * 100}%`}>
        {['∀', 'λ', '∃', '∪', '⊕', '∂', 'ℜ', '⊗', '∅', '∧', '∨'][i % 11]}
      </span>
    ))}
  </div>
</div>

<style>
  .grid-bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: -1;
    overflow: hidden;
  }
  
  .grid-lines {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(to right, var(--color-border) 1px, transparent 1px),
      linear-gradient(to bottom, var(--color-border) 1px, transparent 1px);
    background-size: 80px 80px;
    opacity: 0.15;
  }
  
  .grid-symbols {
    position: absolute;
    inset: 0;
  }
  
  .floating-symbol {
    position: absolute;
    left: var(--x);
    top: var(--y);
    font-size: 1.5rem;
    color: var(--color-text);
    opacity: 0;
    animation: float 20s ease-in-out infinite;
    animation-delay: var(--delay);
  }
  
  @keyframes float {
    0%, 100% {
      opacity: 0;
      transform: translateY(0);
    }
    10% {
      opacity: 0.05;
    }
    50% {
      opacity: 0.08;
      transform: translateY(-20px);
    }
    90% {
      opacity: 0.05;
    }
  }
</style>
